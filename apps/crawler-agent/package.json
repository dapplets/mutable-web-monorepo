{
  "name": "@mweb/crawler-agent",
  "version": "0.1.0",
  "main": "dist/node/index.js",
  "types": "dist/node/index.d.ts",
  "bin": {
    "mweb-crawler-agent": "dist/node/cli.js"
  },
  "scripts": {
    "start": "node dist/node/cli.js start",
    "build": "pnpm run clean && tsc -p tsconfig.json && chmod +x ./dist/node/cli.js && pnpm run build:inpage",
    "build:inpage": "webpack --mode production",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest \"tests/unit/.*\\.test\\.ts$\"",
    "test:unit:watch": "jest \"tests/unit/.*\\.test\\.ts$\" --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "pnpm run build && pnpm test && pnpm run lint"
  },
  "files": [
    "dist",
    "docs"
  ],
  "keywords": [
    "mutableweb",
    "dapplets",
    "crawler"
  ],
  "author": "Mutable Web",
  "license": "MIT",
  "dependencies": {
    "commander": "11.1.0",
    "puppeteer": "23.10.4",
    "@mweb/core": "workspace:*",
    "events": "^3.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.86.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
